    "installer": {
        "script": [
            "Remove-Item \"$dir\\`$*\", \"$dir\\Uninst*\" -Force -Recurse",
            "$configpath = \"$env:APPDATA\\Tencent\\WeChat\\config\"",
            "if (!(Test-Path \"$configpath\")) {",
            "    New-Item -Path \"$configpath\" -ItemType Directory -Force | Out-Null",
            "}",
            "Set-Content -NoNewline -Path \"$configpath\\config.ini\" -Value \"[General]\nFileSavePath=$persist_dir\"",
            "$regpath = \"HKCU:Software\\Tencent\\Weixin\"",
            "if (!(Test-Path \"$regpath\")) {",
            "    New-Item -Path \"$regpath\" -Force | Out-Null",
            "}",
            "New-ItemProperty -Path $regpath -Name \"FileSavePath\" -Value \"$persist_dir\" -Force | Out-Null"
        ]
    },
    "shortcuts": [
        [
            "WeChat.exe",
            "WeChat"
        ]
    ],
    "persist": "WeChat Files",
    "uninstaller": {
        "script": [
            "Remove-Item -Path \"$env:APPDATA\\Tencent\\WeChat\\config\\config.ini\" -Force -ErrorAction SilentlyContinue",
            "Remove-ItemProperty -Path \"HKCU:Software\\Tencent\\Weixin\" -Name \"FileSavePath\" -Force -ErrorAction SilentlyContinue"
        ]
    },
    "checkver": {
        "url": "https://pc.weixin.qq.com/?lang=en_US",
        "regex": "<div class=\"download-text\">Download ([\\d.]+)</div>"
    },
